<% layout('/layout/boilerplate2.ejs')%>

<section class="container ftco-section pt-5 pb-5">
    <div class="row-lg-12"></div>
        <div class=" justify-content-center">
            <div class="row justify-content-center">
                <div class="">
                    <h2 class="heading text-center mb-5 ">Edit client profile</h2>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-4">
                    <div class="login-wrap mx-auto">
  
                  <form action='/client/profile?_method=put' method='post'>
                      <div class="form-group">
                          <input type="text" class="form-control transparent-input"  name='fullname' value="<%=clientUser.fullname%>">
                      </div>
                      <div class="form-group">
                        <input type="text" class="form-control transparent-input" placeholder="email" name='email' value="<%=clientUser.email%>" >
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control transparent-input" placeholder="age" name='age'  value="<%=clientUser.age%>" >
                    </div>
                      
                      
                          <button class="form-control btn btn-primary submit px-3" type="submit">  Edit</button>
                      
                  </form>
              </div>
                </div>
            </div>
        </div>
  </section>