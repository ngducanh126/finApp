<% layout('/layout/boilerplate2.ejs')%>
<h5>Hi <%=expert.fullname%> Please manage appointments with your clients!</h5>
<section class="home hero intro container mt-3 mb-5 " id="intro">
    <div class="cond-flex ">
        <div class="container ">
                <h1>
                <div class="display-5 py-3 mt-3">Confirmed appointmens</div>
                </h1>
                <% for (let c of confirmed){ %> 
                    <article class="blog-post mb-3">
                        <div class="row">
                          <div class="col-sm-4">
                            <img class="img-fluid" src="<%=c.client.img.url%> " alt="">
                          </div>
                          <div class="col-sm-8">
                            <h5 class=" m-2">Appointment with <%=c.client.fullname%></h5>
                            <h5 class=" m-2">Time: <%=c.time%></h5>
                            <h5 class="m-2">Your message:<h5>
                            <p class="m-2 text-light"> <%=c.message%></p>
                          </div>
                        </div>
                      </article>
                <%}%>
                

                <h1>
                    <div class="display-5 py-3 mt-3">Pending appointmens</div>
                </h1>
                <% for (let p of pending){ %> 
                  <article class="blog-post mb-3" >
                      <div class="row">
                        <div class="col-sm-4">
                          <img class="img-fluid" src="<%=p.client.img.url%> " alt=""   >
                        </div>
                        <div class="col-sm-8">
                          <h5 class=" m-2">Appointment with <%=p.client.fullname%></h5>
                          <h5 class=" m-2">Time: <%=p.time%></h5>
                          <form action="/expert/profile/appointment/<%=p._id%>" method="post" class="m-2">
                            <input type="text" name="message" placeholder="instructions for the appointment" style="width: 300px;">
                            <button>confirm appointment</button>
                        </form>
                        </div>
                      </div>
                    </article>
              <%}%>
                
         </div>
    </div>
</section>
