<% layout('/layout/boilerplate2.ejs')%>
    <section class="container ftco-section pt-5 pb-5">
        <div class="row-lg-12"></div>
            <div class=" justify-content-center">
                <div class="row justify-content-center">
                    <div class="">
                        <h3 class="mb-5 heading text-center">Haven't got an account?</h3>
                    
                    </div>
                </div>
                <div class="row justify-content-center">
                    <div class="col-md-6 col-lg-4">
                        <div class="login-wrap mx-auto">
                      
                <h2 class="lead text-center mb-5 ">Sign up now to assist clients!</h2>
                    <form action='/expert/register' method='post' class="signin-form"  enctype="multipart/form-data"> 
                          <div class="form-group">
                              <input type="text" class="form-control transparent-input" placeholder="fullname" name="fullname" required>
                          </div>
                            <div class="form-group mt-3">
                                <label for="file" ><h5>Upload an image</h5>  </label>
                                <input type="file" class="form-control transparent-input" placeholder="upload an image" name="img" >
                            </div>
                            <div class="form-group">
                                <input type="email" class="form-control transparent-input" placeholder="email" name="email" required>
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control transparent-input" placeholder="age" name="age" required>
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control transparent-input" placeholder="what are your fields of expertise?" name="experience" required style="height: 250px;">
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control transparent-input" placeholder="freetime" name="freetime" required>
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control transparent-input" placeholder="new username" name="username" required>
                            </div>

                    <div class="form-group mb-2">
                      <input id="password-field" type="password" class="form-control transparent-input" placeholder="new password" name="password" required>
                      <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="form-control btn btn-primary submit px-3">Sign Up</button>
                    </div>
                    <div class="form-group d-md-flex">
                        <div class="w-50">
                            <label class="checkbox-wrap text-light checkbox-primary">Remember Me
                                          <input type="checkbox" checked>
                                          <span class="checkmark"></span>
                                        </label>
                                    </div>
                    </div>
                   </form>
                <div class="w-150 py-3 text-center">
                  <a href="/" style="color: #fff">Back to Homepage</a>
                </div>
                  
                  </div>
                    </div>
                </div>
            </div>
    </section>