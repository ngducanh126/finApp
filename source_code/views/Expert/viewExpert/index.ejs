<% layout('/layout/boilerplate.ejs')%>
    <% for (e of expert){%>

                <div class="card shadow-lg m-3" id='pop'  >
                    <div class="card-body text-center">
                        <p class="lead my-4 text-warning fw-bold">Name:<%=e.fullname%></p>
                        <p class="card-text mx-5 text-muted d-none d-lg-block">Experience: <%=e.experience%></p>
                        <p class="card-text mx-5 text-muted d-none d-lg-block">Appointment times: <%=e.freetime%></p>
                        <!-- <a href="/expert/<%=e._id%>" class="btn btn-outline-warning btn-lg mt-3">view expert and connect now </a> -->
                        <div>
                            <form action="/expert/<%=e._id%>/appointment" method="post">
                                <input type="text" placeholder="enter the time you want to meet this expert" name="time" style="width: 450px;">
                                <button>submit appointment request</button>
                            </form>
                        </div>
                    </div>
                </div>
        
    <%}%>
