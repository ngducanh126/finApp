<% layout('/layout/boilerplate2.ejs')%>
<div class="m-3">
<h3>Blog topic: <%=blogs[0].category%> </h3>
</div>
<% for (let b of blogs){%>
    <article class="blog-post mb-3">
      <div class="row">
        <div class="col-sm-4">
          <img class="img-fluid" src="<%=b.image.url %> " alt="">
        </div>
        <div class="col-sm-8">
          <h3 class="m-0 mt-3"><%=b.title%></h3>
          <p class="m-0">Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.</p>
          <div class="badge1 mt-3">
            <a href="#">category:<%=b.category%> </a>
          </div>
        </div>
      </div>
    </article>
 <%}%> 